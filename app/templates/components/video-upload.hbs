  <button {{action 'start' }} disabled={{isNotRecording}}>Start</button>
  <button {{action 'stop' }} disabled={{isRecording}}>Stop</button>
  <button {{action 'pause'}}disabled={{isRecording}}>Pause</button>
  <button {{action 'resume'}}disabled={{isRecording}}>Resume</button>
  <button {{action 'save'}}disabled={{isRecording}}>Save</button>

